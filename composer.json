{
    "name": "battis/crud",
    "description": "Doctrine DBAL-based CRUD implementation",
    "authors": [
        {
            "name": "Seth Battis",
            "email": "seth@battis.net"
        }
    ],
    "require": {
        "ext-pdo": "*",
        "battis/data-utilities": "^1.0",
        "envms/fluentpdo": "^2.2"
    },
    "require-dev": {
        "misantron/dbunit": "^5.2",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Battis\\CRUD\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Battis\\CRUD\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    }
}
